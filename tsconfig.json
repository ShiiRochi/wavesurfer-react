{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "outDir": "dist/types"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.spec.tsx",
    "src/setupTests.tsx",
    "src/stories",
    "dist",
    "node_modules"
  ]
}
